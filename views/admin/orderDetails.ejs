                                <div class="mb-3">
                                    <label>Notes</label>
                                    <textarea class="form-control" name="notes" id="notes" placeholder="Type some note"></textarea>
                                </div>
                                <button class="btn btn-primary">Save note</button>
                            </div> -->
                        <!-- </div>col// --> 
                    <!-- </div> -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
        </section> <!-- content-main end// -->
        <!-- footer -->
        <%- include('partials/footer')%>
        <!-- footer -->
    </main>
