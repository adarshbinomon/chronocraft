<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Evara Dashboard</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assetsbackend/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link href="/assetsbackend/css/main.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div class="screen-overlay"></div>
    <!-- sidebar -->
    <%- include('partials/sidebar')%>
    <!-- sidebar -->
    <main class="main-wrap">
        <!-- header -->
        <%- include('partials/header')%>
        <!-- header -->
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Categories </h2>
                    <p>Add, edit or delete a category</p>
                </div>
                <!-- <div>
                    <input type="text" placeholder="Search Categories" class="form-control bg-white">
                </div> -->
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <form method="post" action="/admin/categories-edit/<%= data._id %>" enctype="multipart/form-data" >
                            <div class="mb-4">
                                <label for="category_name" class="form-label">Name</label>
                                <input type="text" placeholder="Type here" name="name" value="<%= data.name %>" class="form-control" id="caregory_name" />
                            </div>
                            <div class="mb-4">
                                <div><img src="/assetsbackend/imgs/category/<%= data.image %>" alt="<%= data.image %>" width="100px"></div>
                                <label for="image class="form-label">image</label>
                                <input type="file" placeholder="" name="image" class="form-control" value="<%= data.filename %>" id="image" />
                            </div>
                            <div class="mb-4">
                                <label class="form-label">isListed</label>
                                <select class="form-select" name="isListed" value="<%= data.isListed %>">
                                    <option <% if (data.isListed) { %> selected <% } %> value="true">Yes</option>
                                      <option <% if (!data.isListed) { %> selected <% } %> value="false">No</option>
                                </select>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Description</label>
                                <input placeholder="Type here" class="form-control" name="description" value="<%= data.description %>"></input>
                            </div>
                            <% if (errorMsg) { %>
                                <p class="text-danger"><%=errorMsg%></p>
                                <% } %>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Update category</button>
                            </div>
                        </form>
                        </div> <!-- .col// -->
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div> <!-- card .// -->
        </section> <!-- content-main end// -->
        <!-- footer -->
        <%- include('partials/footer')%>
        <!-- footer -->
    </main>
    <script src="/assetsbackend/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assetsbackend/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assetsbackend/js/vendors/select2.min.js"></script>
    <script src="/assetsbackend/js/vendors/perfect-scrollbar.js"></script>
    <script src="/assetsbackend/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/assetsbackend/js/main.js" type="text/javascript"></script>
</body>

</html>