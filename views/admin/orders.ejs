<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Evara Dashboard</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assetsbackend/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link href="/assetsbackend/css/main.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
</head>

<body>
    <div class="screen-overlay"></div>
     <!-- sidebar -->
     <%- include('partials/sidebar')%>
     <!-- sidebar -->
    <main class="main-wrap">
        <!-- header -->
        <%- include('partials/header')%>
        <!-- header -->
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order List </h2>
                    <p>Lorem ipsum dolor sit amet.</p>
                </div>
                <div>
                    <input type="text" placeholder="Search order ID" class="form-control bg-white">
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="dataTable">
                            <thead>
                                <tr>
                                    <th>#ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Date</th>
                                    <th scope="col" class="text-end"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                <%for(let i=0;i<orders.length;i++) {%>
                                <tr>
                                    <td><%=String(orders[i]._id).slice(-6)%></td>
                                    <td><b><%= orders[i].customerId.name %></b></td>
                                    <td><%= orders[i].customerId.email %></td>
                                    <td><%=orders[i].totalAmount%></td>
                                    <td>
                                        <span
                                            <% if (orders[i].orderStatus === "PENDING") { %>
                                                class="badge rounded-pill alert-warning"
                                            <% } else if (orders[i].orderStatus === 'DELIVERED') { %>
                                                class="badge rounded-pill alert-success"
                                            <% } else if (orders[i].orderStatus === "CANCELLED") { %>
                                                class="badge rounded-pill alert-danger"
                                            <% } else if (orders[i].orderStatus === "RETURNED") { %>
                                                class="badge rounded-pill alert-secondary"
                                            <% } else if (orders[i].orderStatus === "PLACED") { %>
                                                class="badge rounded-pill alert-info"
                                            <% } %>
                                        >
                                            <%= orders[i].orderStatus %>
                                        </span>
                                    </td>
                                    <td><%=String(orders[i].createdAt).slice(4, 16)%></td>
                                    <td class="text-end">
                                        <a href="/admin/order-details/<%=orders[i]._id%>" class="btn btn-md rounded font-sm">Edit</a>
                                        
                                    </td>
                                </tr>

                                <% } %>
                               
                            </tbody>
                        </table>
                    </div> <!-- table-responsive //end -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
            
        </section> <!-- content-main end// -->
         <!-- footer -->
       <%- include('partials/footer')%>
       <!-- footer -->
    </main>
    <script src="/assetsbackend/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assetsbackend/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assetsbackend/js/vendors/select2.min.js"></script>
    <script src="/assetsbackend/js/vendors/perfect-scrollbar.js"></script>
    <script src="/assetsbackend/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- Main Script -->
    <script src="/assetsbackend/js/main.js" type="text/javascript"></script>
</body>

</html>