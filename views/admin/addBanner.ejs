<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>ChronoCraft-admin</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assetsbackend/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link href="/assetsbackend/css/main.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />

</head>

<body>
    <div class="screen-overlay"></div>
    <!-- sidebar -->
    <%- include('partials/sidebar')%>
    <!-- sidebar -->

    <main class="main-wrap">
        <!-- header -->
        <%- include('partials/header')%>
        <!-- header -->
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Banner </h2>
                    <p>Add Banner</p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                            <form method="post" action="/admin/add-banner" enctype="multipart/form-data" >
                                <div class="mb-4">
                                    <label for="name" class="form-label">Name</label>
                                    <input type="text" placeholder="Type here" name="name" class="form-control" id="name" />
                                </div>
                                <div class="mb-4">

                                    <label for="isListed" class="form-label">image</label>
                                    <input type="file" placeholder="" name="image" class="form-control" id="image" />
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">isListed</label>
                                    <select class="form-select" name="isListed">
                                        <option value="true">Yes</option>
                                          <option value="false">No</option>
                                    </select>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <input type="text" placeholder="Type here" class="form-control" name="description"></input>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">Link</label>
                                    <input type="text" placeholder="Type here" class="form-control" name="link"></input>
                                </div>
                                <div class="mb-4">
                                    <label class="form-label">expiry</label>
                                    <input type="date" placeholder="Type here" class="form-control" name="date"></input>
                                </div> 
                                <div><% if (typeof message !== 'undefined') {
                          
                                    %>
                                    <p style="color: green;"><%= message %><p>
                                  <% } %></div>
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">Create banner</button>
                                </div>
                            </form>
                        </div>
                       
                    </div> <!-- .row // -->
                </div> <!-- card body .// -->
            </div> <!-- card .// -->
        </section> <!-- content-main end// -->
       <!-- footer -->
       <%- include('partials/footer')%>
       <!-- footer -->
    </main>
    <script src="/assetsbackend/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assetsbackend/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assetsbackend/js/vendors/select2.min.js"></script>
    <script src="/assetsbackend/js/vendors/perfect-scrollbar.js"></script>
    <script src="/assetsbackend/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <!-- Main Script -->
    <script src="/assetsbackend/js/main.js" type="text/javascript"></script>
</body>

</html>