<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
<title>Chronocraft- admin</title>    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assetsbackend/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link href="/assetsbackend/css/main.css" rel="stylesheet" type="text/css" />
    <link href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css" />

</head>

<body>
    <div class="screen-overlay"></div>
     <!-- sidebar -->
     <%- include('partials/sidebar')%>
     <!-- sidebar -->
    <main class="main-wrap">
         <!-- header -->
       <%- include('partials/header')%>
       <!-- header -->
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Banner List</h2>
                    <p>Add or delete banners here.</p>
                </div>
                <div>
                    <a href="/admin/add-banner" class="btn btn-primary btn-sm rounded">Create new</a>
                </div>
            </div>
            <div class="card mb-4">
                <table class="table table-hover" id="dataTable">
                    <thead>
                      <tr>
                        <th scope="col">id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">isListed</th>
                        <th scope="col">Link</th>
                        <th scope="col">Expiry</th>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0;i<banners.length;i++){ %>
                            <tr>
                              <td><%= i+1 %></td>
                              <td><%= banners[i].name %></td>
                              <td><%= banners[i].description %></td>
                              <td><%= banners[i].isListed %></td>
                              <td><%= banners[i].link %></td>
                              <td><%=String(banners[i].expiry).slice(4, 16)%></td>
                              <td><img src="/assetsbackend/imgs/banner/<%=banners[i].image %>" width="100px" alt="<%= banners[i].image %>"></td>
                              <td> <div class="d-flex"><a href="/admin/edit-banner/<%=banners[i]._id%>" class="btn-sm btn-info me-auto">Edit</a> <a type="button" href="/admin/delete-banner/<%=banners[i]._id%>" class="btn-sm btn-danger">Delete</a></div>
                            </tr>
                            <% } %>
                  </table>
            </div> <!-- card end// -->
        </section> <!-- content-main end// -->
         <!-- footer -->
       <%- include('partials/footer')%>
       <!-- footer -->
    </main>
    <script src="/assetsbackend/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assetsbackend/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assetsbackend/js/vendors/select2.min.js"></script>
    <script src="/assetsbackend/js/vendors/perfect-scrollbar.js"></script>
    <script src="/assetsbackend/js/vendors/jquery.fullscreen.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <!-- Main Script -->
    <script src="/assetsbackend/js/main.js" type="text/javascript"></script>
</body>

</html>